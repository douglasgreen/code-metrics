{
    "name": "douglasgreen/code-metrics",
    "description": "Code metrics for PHP using PDepend",
    "type": "library",
    "keywords": [
        "automation",
        "cli",
        "code metrics",
        "code quality",
        "coding standards",
        "command-line interface",
        "linting",
        "php",
        "php parser",
        "static analysis"
    ],
    "homepage": "https://github.com/douglasgreen/code-metrics",
    "license": "MIT",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.3",
        "pdepend/pdepend": "^2.16.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.94.2",
        "phpstan/phpstan": "^2.1.39",
        "rector/rector": "^2.3.7"
    },
    "autoload": {
        "psr-4": {
            "DouglasGreen\\CodeMetrics\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "code_metrics.php",
            "php-cs-fixer fix --dry-run --verbose",
            "phpstan analyse",
            "rector process --dry-run"
        ],
        "lint:fix": [
            "php-cs-fixer fix",
            "rector process"
        ]
    },
    "bin": [
        "bin/code_metrics.php"
    ]
}
