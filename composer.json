{
    "name": "douglasgreen/check-metrics",
    "description": "Code metrics for PHP using PDepend",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/douglasgreen/code-metrics",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "ast",
        "automation",
        "ci cd",
        "cli",
        "cli library",
        "cli tool",
        "code quality",
        "code standards",
        "code validation",
        "coding standards",
        "command",
        "command line",
        "command-line interface",
        "command-line utility",
        "composer",
        "console",
        "directory",
        "exceptions",
        "file",
        "fixing",
        "linter",
        "linting",
        "php",
        "php automation",
        "php cli",
        "php command line",
        "php console application",
        "phpcs",
        "php cs fixer",
        "php fig",
        "php parser",
        "php scripting",
        "psr",
        "regex",
        "scripting",
        "static analysis",
        "syntax check",
        "terminal",
        "testing",
        "utility",
        "wrapper"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\PhpLinter\\": "src/"
        }
    },
    "bin": [
        "bin/check-metrics",
        "bin/generate-metrics"
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        }
    ],
    "require": {
        "php": ">=8.1",
        "pdepend/pdepend": "^2.16"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "phpstan/phpstan": "^1.11",
        "rector/rector": "^1.2",
        "symplify/easy-coding-standard": "^12.3"
    },
    "scripts": {
        "lint": [
            "check-metrics",
            "ecs",
            "phpstan analyse",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": "config-setup --pre-commit",
        "post-update-cmd": "config-setup --pre-commit"
    }
}
