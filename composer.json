{
    "name": "douglasgreen/code-metrics",
    "description": "Code metrics for PHP using PDepend",
    "type": "library",
    "keywords": [
        "automation",
        "cli",
        "code metrics",
        "code quality",
        "coding standards",
        "command-line interface",
        "linting",
        "php",
        "php parser",
        "static analysis"
    ],
    "homepage": "https://github.com/douglasgreen/code-metrics",
    "license": "MIT",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "douglasgreen/utility": "^0.5",
        "pdepend/pdepend": "^2.16"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.0",
        "shipmonk/name-collision-detector": "^2.1",
        "symplify/easy-coding-standard": "^12.3"
    },
    "autoload": {
        "psr-4": {
            "DouglasGreen\\CodeMetrics\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "code_metrics.php",
            "ecs",
            "phpstan analyse",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": "config_setup.php",
        "post-update-cmd": "config_setup.php"
    },
    "bin": [
        "bin/code_metrics.php"
    ]
}
